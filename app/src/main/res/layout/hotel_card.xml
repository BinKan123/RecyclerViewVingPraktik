<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="5dp">


    <ImageView
        android:id="@+id/imageHotel"
        android:layout_width="147dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ratingBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintVertical_bias="0.21"
        app:srcCompat="@drawable/inspiration" />

    <TextView
        android:id="@+id/name"
        android:layout_width="219dp"
        android:layout_height="34dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/hotelType"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/hotelType"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/details"
        android:layout_width="206dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageHotel"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/hotelType"
        android:layout_width="186dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="0.272" />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srb_fillColor="@color/colorDarkOrange"
        app:srb_numberOfStars="5"
        app:srb_rating="3"
        app:srb_starSize="40dp"
        app:srb_stepSize="1"
        tools:layout_editor_absoluteY="74dp" />
</android.support.constraint.ConstraintLayout>