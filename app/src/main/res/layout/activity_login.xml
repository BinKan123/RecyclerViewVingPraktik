        tools:layout_editor_absoluteX="0dp" />

    <include
        android:id="@+id/include2"
        layout="@layout/content_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="26dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="319dp"
        android:layout_height="69dp"
        android:text="ELLER"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/loginWithGoogle"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/loginWithGoogle"
        android:layout_marginBottom="231dp"
        app:layout_constraintBottom_toTopOf="@+id/newAcc"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/newAcc"
        android:layout_width="235dp"
