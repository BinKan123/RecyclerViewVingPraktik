<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    tools:context="com.example.kanbi.recyclerviewmvvm.minSida.LoginActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/web_actionbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/include2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <include
        android:id="@+id/include2"
        layout="@layout/content_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/action_bar"
        app:layout_constraintRight_toRightOf="@+id/action_bar"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:text="ELLER"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/loginWithGoogle"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/newAcc"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/newAcc"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginBottom="111dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border"
        android:text="SKAPA NYTT KONTO"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/loginWithEmail"
        android:layout_width="272dp"
        android:layout_height="63dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include2"
        app:layout_constraintVertical_bias="0.114"
        app:srcCompat="@drawable/email" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/loginWithFB"
        android:layout_width="256dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginWithEmail"

        app:layout_constraintHorizontal_bias="0.514" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/loginWithGoogle"
        android:layout_width="259dp"
        android:layout_height="41dp"
        android:layout_marginBottom="242dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginWithFB"
        app:srcCompat="@drawable/google"
        app:layout_constraintVertical_bias="0.212"
        tools:layout_editor_absoluteX="63dp" />

    "
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.415"
    app:layout_constraintTop_toTopOf="@+id/include2"
    android:layout_marginTop="84dp" />


</android.support.constraint.ConstraintLayout>
