        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="83dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/loginWithGoogle"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/loginWithGoogle" />

    <ImageButton
        android:id="@+id/loginWithEmail"
        android:layout_width="272dp"
        android:layout_height="63dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/email"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/emailInput"
        app:layout_constraintVertical_bias="0.0" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/loginWithFB"
        android:layout_width="252dp"
        android:layout_height="46dp"
        android:scaleType="fitCenter"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/loginWithGoogle" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="271dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/loginWithEmail"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/loginWithEmail"
        app:layout_constraintHorizontal_bias="0.508"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordInput"
        tools:layout_editor_absoluteX="151dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailInput"
        android:layout_marginBottom="-200dp"
        app:layout_constraintBottom_toTopOf="@+id/forgotPW"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/emailInput"
        app:layout_constraintHorizontal_bias="0.181" />

    <Button
        android:id="@+id/newAcc"
        android:layout_width="108dp"
        android:layout_height="29dp"
        android:text="Ny konto?"
        android:textSize="10sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/passwordInput"
        app:layout_constraintBottom_toBottomOf="@+id/forgotPW"
        android:layout_marginBottom="3dp"
        app:layout_constraintRight_toLeftOf="@+id/forgotPW"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/forgotPW"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:text="Fel lÃ¶senord?"
