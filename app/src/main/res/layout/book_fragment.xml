<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kanbi.recyclerviewmvvm.BokaResaFragment">

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="539dp"
        app:srcCompat="@drawable/skytree"
        android:id="@+id/imageView9"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Flyg+Hotell"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:id="@+id/button2"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.24000001"
        android:alpha="0.8"
        android:drawableTint="@color/colorDarkOrange"
        android:drawableStart="@drawable/ic_flyghotel" />

    <Button
        android:text="City"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:id="@+id/button3"
        android:textAllCaps="false"
        android:drawableTint="@color/colorDarkOrange"
        android:drawableStart="@drawable/ic_city"
        app:layout_constraintRight_toRightOf="@+id/button2"
        app:layout_constraintLeft_toLeftOf="@+id/button2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:alpha="0.8"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="Kryssning"
        android:textAllCaps="false"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:id="@+id/button4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintLeft_toLeftOf="@+id/button2"
        android:alpha="0.8"
        android:drawableStart="@drawable/ic_boat"
        android:drawableTint="@color/colorDarkOrange" />

    <Button
        android:text="Flyg"
        android:textAllCaps="false"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:id="@+id/button5"
        app:layout_constraintRight_toRightOf="@+id/button4"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:drawableStart="@drawable/ic_flyg"
        android:drawableTint="@color/colorDarkOrange"
        android:alpha="0.8" />

    <Button
        android:text="Hotell"
        android:textAllCaps="false"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:id="@+id/button6"
        app:layout_constraintRight_toRightOf="@+id/button5"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        android:alpha="0.8"
        android:drawableStart="@drawable/ic_hotel"
        android:drawableTint="@color/colorDarkOrange"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>