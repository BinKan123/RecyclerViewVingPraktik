<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="181dp"
        app:srcCompat="@drawable/bookresa"
        android:id="@+id/hotelImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="169dp"
        android:layout_height="33dp"
        android:id="@+id/hotelGroup"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/hotelImage"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2" />

    <TextView
        android:layout_width="169dp"
        android:layout_height="38dp"
        android:id="@+id/hotelType"
        app:layout_constraintLeft_toLeftOf="@+id/hotelGroup"
        app:layout_constraintTop_toBottomOf="@+id/hotelGroup" />

    <TextView
        android:layout_width="315dp"
        android:layout_height="115dp"
        android:id="@+id/hotelDetails"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/hotelType"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/hotelBtn"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:text="VÃ„LJ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/newURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="245dp" />
</android.support.constraint.ConstraintLayout>