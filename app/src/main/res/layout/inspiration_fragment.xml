<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kanbi.recyclerviewmvvm.inspirationBooking.InspirationFragment">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="511dp"
        app:srcCompat="@drawable/inspiration"
        android:id="@+id/imageView9"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Resmål A-Ö"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:id="@+id/destination"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.24000001"
        android:alpha="0.8"
        android:drawableTint="@color/colorDarkOrange"
        android:drawableStart="@drawable/ic_destination" />

    <Button
        android:text="Värmeguiden"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:id="@+id/warmguiden"
        android:textAllCaps="false"
        android:drawableTint="@color/colorDarkOrange"
        android:drawableStart="@drawable/ic_sun"
        app:layout_constraintRight_toRightOf="@+id/destination"
        app:layout_constraintLeft_toLeftOf="@+id/destination"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/destination"
        android:alpha="0.8"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="Guider och restips"
        android:textAllCaps="false"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:id="@+id/restips"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/warmguiden"
        app:layout_constraintLeft_toLeftOf="@+id/destination"
        android:alpha="0.8"
        android:drawableStart="@drawable/ic_guide"
        android:drawableTint="@color/colorDarkOrange" />


    <Button
        android:text="Våra egna hotell"
        android:textAllCaps="false"
        android:layout_width="230dp"
        android:layout_height="61dp"
        android:id="@+id/ourHotel"
        android:alpha="0.8"
        android:drawableStart="@drawable/ic_hotel"
        android:drawableTint="@color/colorDarkOrange"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintRight_toRightOf="@+id/restips"
        app:layout_constraintLeft_toLeftOf="@+id/restips"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/restips"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>