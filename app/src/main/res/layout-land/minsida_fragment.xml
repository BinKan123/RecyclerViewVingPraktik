<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kanbi.recyclerviewmvvm.minSida.MinSidaFragment">

    <ImageView
        android:layout_width="98dp"
        android:layout_height="88dp"
        app:srcCompat="@drawable/icon"
        android:id="@+id/imageView8"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintBottom_toTopOf="@+id/login_btn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />
    <Button
        android:id="@+id/login_btn"

        android:text="LOGGA IN"
        android:textColor="#FFFAFA"
        android:textSize="14sp"

        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/solid"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="144dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addBooking_btn"

        android:text="LÃ„GGA TILL BOKNING"
        android:textColor="#FF9408"
        android:textSize="14sp"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/login_btn"
        app:layout_constraintRight_toRightOf="@+id/login_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:text="Ny konto?"
        android:layout_width="103dp"
        android:layout_height="46dp"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:textColorLink="?android:attr/colorMultiSelectHighlight"
        android:textColor="?attr/colorControlNormal"
        android:textAlignment="center"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        app:layout_constraintHorizontal_bias="0.46" />


</android.support.constraint.ConstraintLayout>